<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleBarRootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/red"
    android:orientation="vertical">

    <View
        android:id="@+id/noticeView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/titleBarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46">

        <LinearLayout
            android:id="@+id/tbLeftView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:gravity="center"
            android:minWidth="@dimen/dp_36"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tbLeftIcon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_26"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_0"
                android:gravity="center"
                android:minWidth="@dimen/dp_26"
                android:src="@drawable/back_white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tbLeftTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tbCenterView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minWidth="@dimen/dp_48"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">

            <TextView
                android:id="@+id/tbCenterTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxEms="8"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                tools:text="我的好友" />

            <TextView
                android:id="@+id/tbSubCenterTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxEms="8"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                tools:text="38人" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tbRightView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:minWidth="@dimen/dp_48"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6">

            <ImageView
                android:id="@+id/tbRight1Icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:minWidth="@dimen/dp_36"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:visibility="gone"
                tools:src="@drawable/comm_add_yellow" />

            <ImageView
                android:id="@+id/tbRight2Icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:minWidth="@dimen/dp_36"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:visibility="gone"
                tools:src="@drawable/comm_add_yellow" />

            <TextView
                android:id="@+id/tbRight1Txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:minWidth="@dimen/dp_36"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:visibility="gone"
                tools:text="收藏" />

            <TextView
                android:id="@+id/tbRight2Txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:minWidth="@dimen/dp_36"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:visibility="gone"
                tools:text="我的分享" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
